# Database (Supabase PostgreSQL)
# Ottieni da: https://supabase.com → Settings → Database → Connection String
POSTGRES_URL="postgresql://user:password@host:5432/database?sslmode=require&pgbouncer=true"
POSTGRES_URL_NON_POOLING="postgresql://user:password@host:5432/database?sslmode=require"

# Redis Cache (Upstash)
# Ottieni da: https://upstash.com → Create Database → REST API
KV_URL="https://your-redis-instance.upstash.io"
KV_REST_API_TOKEN="your-rest-api-token"
KV_REST_API_READ_ONLY_TOKEN="your-readonly-token"

# Authentication (NextAuth)
# NEXTAUTH_SECRET: genera con `openssl rand -base64 32`
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-generate-with-openssl"
JWT_SECRET="your-jwt-secret-can-be-same-as-nextauth-secret"

# Google OAuth (per login utenti)
# Ottieni da: https://console.cloud.google.com → APIs & Services → Credentials
# Redirect URI: http://localhost:3000/api/auth/callback/google
GOOGLE_OAUTH_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_OAUTH_CLIENT_SECRET="your-client-secret"

# Google Maps API v2 (per autocomplete indirizzi)
# ⚠️ IMPORTANTE: USA LA NUOVA GOOGLE PLACES API (v2)
# 
# Setup:
# 1. Vai: https://console.cloud.google.com → Crea progetto
# 2. Abilita API: "Places API (New)" e "Maps JavaScript API"
# 3. Crea una chiave API (Credentials → Create API Key)
# 4. RESTRIZIONI CHIAVE:
#    - Tipo: Browser/Web API
#    - Referer HTTP: http://localhost:3000/* oppure https://tuodominio.com/*
#    - Limita a: "Places API (New)" + "Maps JavaScript API"
# 5. Copia la chiave nei due formati supportati (uno basta):
#
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key-v2"
# ⚠️ ALTERNATIVO (vecchio nome, ancora supportato):
# NEXT_PUBLIC_GOOGLE_MAPS_API="your-google-maps-api-key-v2"

# Vercel Blob Storage (opzionale in dev, obbligatorio in production)
# Ottieni da: Vercel Dashboard → Storage → Create Blob Store
VERCEL_BLOB_READ_WRITE_TOKEN="your-vercel-blob-token"

# OpenRouter AI (per estrazione dati lead automatica)
# Ottieni da: https://openrouter.ai → Create API Key
OPENROUTER_API_KEY="sk-or-v1-your-openrouter-api-key"

# ============================================
# SEO & Ads Intelligence Dashboard (OPTIONAL)
# ============================================

# Google Ads API
# Ottieni da: Google Ads → Strumenti → Centro API (Developer Token)
# OAuth2: Google Cloud Console → Credenziali → OAuth 2.0 Client
# Refresh Token: OAuth2 flow (una tantum)
# Customer ID: ID account Google Ads senza trattini (es. 1234567890)
GOOGLE_ADS_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_ADS_CLIENT_SECRET="your-client-secret"
GOOGLE_ADS_DEVELOPER_TOKEN="your-developer-token"
GOOGLE_ADS_CUSTOMER_ID="1234567890"
GOOGLE_ADS_REFRESH_TOKEN="your-refresh-token"

# GA4 Data API + Search Console
# Ottieni da: Google Cloud → IAM → Service Account → Crea chiave JSON
# Property ID: GA4 → Amministratore → Proprietà → ID proprietà
GA4_PROPERTY_ID="123456789"
GOOGLE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"..."}'

# Webflow Webhook (per lead attribution automatica)
# Ottieni da: Webflow → Project Settings → Integrations → Webhooks
WEBFLOW_WEBHOOK_SECRET="your-webflow-webhook-secret"
